<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            >
            <ImageView
                android:id="@+id/iv_map_item_image"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/nhahang1"
                android:scaleType="fitXY"
                android:layout_marginRight="8dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_map_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:maxLines="2"
                    android:text="Tên nhà hàng"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">
                    <RatingBar
                        android:id="@+id/rb_map_item"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:numStars="5"
                        android:rating="5"
                        android:stepSize="0.5" />

                    <TextView
                        android:id="@+id/tv_map_item_total_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="100"
                        android:textSize="16sp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_map_item_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Địa chỉ"
                    android:maxLines="2"
                    android:textSize="16sp" />


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
