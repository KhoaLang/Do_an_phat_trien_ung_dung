<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/lvComments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/comment" />

            <LinearLayout
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/custom_linearlayout"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iconUser"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_user" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edtComments"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_comments"
                        android:fontFamily="@font/scheherazader"
                        android:hint="Write comments"
                        android:paddingStart="10dp"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/emoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/image_emoji" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/iconSend"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_plane" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>