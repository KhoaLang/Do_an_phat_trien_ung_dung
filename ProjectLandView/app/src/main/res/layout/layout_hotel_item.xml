<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="16dp"
    android:orientation="vertical">

        <FrameLayout
            android:layout_width="216dp"
            android:layout_height="208dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv_hotel_item_image"
                android:src="@drawable/khachsan1"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_hotel_item_tym"
                android:src="@drawable/tym"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>
        </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hotel_item_name"
        android:text="Tên khách sạn"
        android:maxLines="2"
        android:textSize="18sp"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <RatingBar
            android:id="@+id/rb_hotel_item_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:stepSize="0.5"
            android:numStars="5"
            android:rating="5"
            />

        <TextView
            android:id="@+id/tv_hotel_item_total_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hotel_item_price"
        android:text="10.000.000đ"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/lato_bold"/>
</LinearLayout>